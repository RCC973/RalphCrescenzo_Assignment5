extends layout

block content
    h1= title
    .row
        .error {{ message }}
            .col-xs-12.col-md-6
                form.form-horizontal(action="#{url}", method="post", role="form")
                    - if (error == "val")
                    .alert.alert-danger(role="alert") All fields required, please try again
                    .form-group
                        label.pull-left.col-sm-4.control-label(for="name") Item Name
                        .col-sm-8
                            input#name.form-control(name="name")
                    .form-group
                        label.col-sm-4.control-label(for="description") Description
                        .col-sm-8
                            textarea#description.form-control(name="description" rows="5")
                    .form-group
                        label.col-sm-4.control-label(for="startingPrice") Starting Price
                        .col-sm-8
                            input#startingPrice.form-control(name="startingPrice")
                    button.btn.btn-default.pull-right Add New Item
            .col-xs-12.col-md-4